<body class= "sign-in-body">
  <div class="sign-in-content">
    <div class ="sign-in-title"><strong>IC Works</strong></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "e-mail" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "off" ,class: "e-mail" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :ログインしたままにする %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
  </div>
</body>
