<div class="message3" id="<%= room.id %>">
	<% room.messages.each do |message| %>
	<% if message.user.id == current_user.id %>
		<p class="message-sent clearfix"><%= attachment_image_tag message.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle right", fallback: "no_image.jpg", :size => "40x40" %><span><%= message.content %></span></p>
	<% else %>
		<p class="message-user clearfix"><%= attachment_image_tag message.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle left", fallback: "no_image.jpg", :size => "40x40" %><span><%= message.content %></span></p>
		<% end %>
	<% end %>
	</div>
	<%= form_with url:room_messages_path(room), id: "aaa" do |f| %>
	<div class="text-sent">
	<%= f.text_area :content, rows:'3', class: "room-text",placeholder: "メッセージをここに" %>
	<input type="submit" name="commit" value="送信" id="add" class="btn btn-room" data-disable-with="送信">
	</div>
<% end %>
<script>
	$(function() {
		var a = $('.message3').attr('id');
		$('.'+a).css('background-color','#dddddd');
	})
</script>