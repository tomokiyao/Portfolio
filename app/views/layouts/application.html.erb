<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class= "navbar navbar-main">
          <nav class= "nav navbar-nav navbar-left">
            <span>IC.inc</span>
          </nav>
          <nav>
            <ul class="navbar navbar-nav navbar-right">
              <% if user_signed_in? %>
              <li>
                <%=link_to " Home", user_path(current_user) %>
              </li>
              <li>
                <%=link_to " Users", users_path(@users) %>
              </li>
              <li>
                <%=link_to " 一覧", projects_path %>
              </li>
              <li>
                <%= link_to " Logout", destroy_user_session_path, method: :delete %>
              </li>
              <% else %>
              <li>
                <%=link_to " Home", homes_index_path, class: "glyphicon glyphicon-home" %>
              </li>
              <li>
                <%=link_to " About", homes_show_path, class: "glyphicon glyphicon-user" %>
              </li>
              <li>
                <%=link_to " Sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %>
              </li>
              <li>
                <%=link_to " Log in", new_user_session_path, class: "glyphicon glyphicon-log-in" %>
              </li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </header>
    <%= yield %>
  </body>
</html>

